<p style="color: green"><%= notice %></p>

<% content_for :title, "Weathers" %>

<h1>Weathers</h1>

<div id="weathers">
  <% @weathers.each do |weather| %>
    <div>
      <h1><%=weather.title%></h1>
    </div>
    <p>
      <%= link_to "Show this weather", weather %>
    </p>
  <% end %>
</div>

<%= link_to "New weather", new_weather_path %>